	Leer
		RandomAccessFile raf = new RandomAccessFile(f, "r");
		int posicion = 0;
		
		while(raf.getFilePointer() != raf.length()) {
			raf.seek(posicion);
			
			d = raf.readInt();
			c = raf.readChar();
			f = raf.readDouble();
			
			posicion += d.length+c.length+f.length;
		}
		raf close();
	Escribir bytes (output -> hacia el fichero)
		FileOutputStream fos = new FileOutputStream(f, true); // true para que añada
		fos.write(i)
		fos.close()
	Leer bytes (input -> desde el fichero)
		FileInputStream fis = new FileInputStream(f);
		int i = fis.read();
		fis.close();
	Escribir data
		DataOutputStream dos = new DataOutputStream(new FileOutputStream(f))
		dos.writeUTF(s)
		dos.writeInt(i)
		dos.close();
	Leer data
		DataInputStream dis = new DataInputStream(new FileInputStream(f))
		dis.readUTF();
		dis.readInt();
		dis.close();

